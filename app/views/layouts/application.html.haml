!!!
%html
  %head
    %title= "Pony Scoreboard"

    %meta{:name => "viewport",    :content => "width=device-width, initial-scale=1.0" }
    %meta{:name => "description", :content => "Sophisticated & accurate best pony ratings" }

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true

    = csrf_meta_tags

  %body
    %header{ role: "header" }
      - if current_user
        = "logged in as @#{current_user.handle}"
        = link_to "logout", end_session_path
      - else
        = link_to "login with twitter", new_session_path
      %hr
    %main{ role: "main" }= yield
    %footer{ role: "footer" }
