!!!
%html
  %head
    %title= "Pony Scoreboard"

    %meta{:name => "viewport",    :content => "width=device-width, initial-scale=1.0" }
    %meta{:name => "description", :content => "Sophisticated & accurate best pony ratings" }

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true

    = csrf_meta_tags

  %body{ :class => current_user ? 'user' : 'guest' }
    %header{ role: "header" }
      - if current_user
        = image_tag( "http://avatars.io/twitter/#{current_user.handle}" )
        %span= "@#{current_user.handle}"
        = link_to "logout", end_session_path
      - else
        = link_to "Login with Twitter", new_session_path

    %main{ role: "main" }= yield
    %footer{ role: "footer" }
      Made by
      = link_to "@zeeraw", "http://twitter.com/zeeraw"
      Designed by
      = link_to "@lablayers", "http://twitter.com/lablayers"
      = link_to "Background Credit", "http://boneswolbach.deviantart.com/art/Summer-Campfire-305409422"
