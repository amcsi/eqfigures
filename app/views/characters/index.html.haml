- if @choices.compact.many?
  - @choices.each_with_index do |character, idx|
    = link_to character.name
    - if idx.zero?
      = "or"

%hr
- if @characters.empty?
  %p= "no characters"
- else
  %article
    - @characters.each_with_index do |character, idx|
      %h2
        %strong= "##{idx}"
        = character.name
      - if policy(character).create?
        = link_to "remove", character, method: :delete, data: { confirm: "Are you sure?" }

- if policy(Character.new).create?
  = link_to "introduce character", new_character_path